<%- model_class = Presindente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:apellido) %>, <%= model_class.human_attribute_name(:nombre) %></th>            
      <th><%= model_class.human_attribute_name(:telefono1) %></th>      
      <th><%= model_class.human_attribute_name(:ruc) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>      
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @presidentes.each do |presindente| %>
      <tr>
        <td><%= link_to presindente.id, presindente_path(presindente) %></td>
        <td><%= presindente.apellido %>, <%= presindente.nombre %></td>        
        <td><%= presindente.telefono1 %></td>        
        <td><%= presindente.ruc %></td>
        <td><%= presindente.email %></td>        
        <td><%=l presindente.created_at %></td>
        <td>
          <%= link_to 'Ver', presindente, class: 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_presindente_path(presindente), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      presindente_path(presindente),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_presindente_path,
            :class => 'btn btn-primary' %>
