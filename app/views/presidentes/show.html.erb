<%- model_class = Presindente -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @presindente.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:apellido) %>:</strong></dt>
  <dd><%= @presindente.apellido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dni) %>:</strong></dt>
  <dd><%= @presindente.dni %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono1) %>:</strong></dt>
  <dd><%= @presindente.telefono1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:telefono2) %>:</strong></dt>
  <dd><%= @presindente.telefono2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ruc) %>:</strong></dt>
  <dd><%= @presindente.ruc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @presindente.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:descripcion) %>:</strong></dt>
  <dd><%= @presindente.descripcion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contenido) %>:</strong></dt>
  <dd><%= @presindente.contenido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:foto) %>:</strong></dt>
  <dd><%= image_tag @presindente.foto.url(:thumb) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imagen1) %>:</strong></dt>
  <dd><%= image_tag @presindente.imagen1.url(:thumb) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imagen2) %>:</strong></dt>
  <dd><%= image_tag @presindente.imagen2.url(:thumb) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imagen3) %>:</strong></dt>
  <dd><%= image_tag @presindente.imagen3.url(:thumb) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:imagen4) %>:</strong></dt>
  <dd><%= image_tag @presindente.imagen4.url(:thumb) %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              presidentes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_presindente_path(@presindente), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              presindente_path(@presindente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
