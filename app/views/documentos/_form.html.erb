<%= form_for @documento, :html => { :class => "form-horizontal documento", multipart: true } do |f| %>

    <% if @documento.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@documento.errors.count, "error") %> prohibited this documento from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @documento.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:titulo]) %>
  </div>
  <div class="control-group">
    <%= f.label :descripcion, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :descripcion, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:descripcion]) %>
  </div>
  <div class="control-group">
    <%= f.label :contenido, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :contenido, rows: '5', cols: '10' ,:class => 'form-control' %>
    </div>
    <%= error_span(@documento[:contenido]) %>
  </div>
  <div class="control-group">
    <%= f.label :tipo_extension, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :tipo_extension, [
            ['PDF (Acrobat Reader)', 'pdf'],
            ['DOC (Microsoft Word)', 'doc'],
            ['IMG (imagen jpg)', 'img'],
            ['Otros', 'otro']
        ],:class => 'form-control' %>
    </div>
    <%= error_span(@documento[:tipo_extension]) %>
  </div>
  <div class="control-group">
    <%= f.label :tipo_documento, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :tipo_documento,[
            ['Documento de Gestion', 'gestion'],
            ['Documentos Importantes', 'importante'],
            ['Otros', 'otro']
        ],:class => 'form-control' %>
    </div>
    <%= error_span(@documento[:tipo_documento]) %>
  </div>
  <div class="control-group">
    <%= f.label :visible, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :visible,[
            ['Visible', 'visible'],
            ['No Visible', 'no_visible']
        ], :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:visible]) %>
  </div>
  <div class="control-group">
    <%= f.label :archivo1, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :archivo1, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:archivo1]) %>
  </div>
  <div class="control-group">
    <%= f.label :archivo2, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :archivo2, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:archivo2]) %>
  </div>
  <div class="control-group">
    <%= f.label :archivo3, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :archivo3, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:archivo3]) %>
  </div>
  <div class="control-group">
    <%= f.label :archivo4, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :archivo4, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:archivo4]) %>
  </div>
  <div class="control-group">
    <%= f.label :archivo5, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :archivo5, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:archivo5]) %>
  </div>
  <div class="control-group">
    <%= f.label :imagen1, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :imagen1, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:imagen1]) %>
  </div>
  <div class="control-group">
    <%= f.label :imagen2, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :imagen2, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:imagen2]) %>
  </div>
  <div class="control-group">
    <%= f.label :imagen3, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :imagen3, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:imagen3]) %>
  </div>
  <div class="control-group">
    <%= f.label :imagen4, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :imagen4, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:imagen4]) %>
  </div>
  <div class="control-group">
    <%= f.label :imagen5, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :imagen5, :class => 'form-control' %>
    </div>
    <%= error_span(@documento[:imagen5]) %>
  </div>

  <br />
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            documentos_path, :class => 'btn btn-default' %>

<% end %>
