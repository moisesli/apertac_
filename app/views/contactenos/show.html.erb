<%- model_class = Contacto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:asunto) %>:</strong></dt>
  <dd><%= @contacto.asunto %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @contacto.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @contacto.nombre %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @contacto.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contenido) %>:</strong></dt>
  <dd><%= @contacto.contenido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adjunto1) %>:</strong></dt>
  <dd><%= @contacto.adjunto1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adjunto2) %>:</strong></dt>
  <dd><%= @contacto.adjunto2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adjunto3) %>:</strong></dt>
  <dd><%= @contacto.adjunto3 %></dd>
</dl>

<%= link_to t('.Regresar', :default => t("helpers.links.back")),
              contactenos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contacto_path(@contacto), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contacto_path(@contacto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
