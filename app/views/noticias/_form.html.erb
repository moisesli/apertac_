<%= form_for(@noticia, :html=>{:class=>"form-horizontal", multipart: true}) do |f| %>
  <% if @noticia.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@noticia.errors.count, "error") %> prohibited this noticia from being saved:</h2>

      <ul>
      <% @noticia.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">    
    <%= f.label :titulo, class: 'col-sm-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_field :titulo, class: 'form-control' %>  
    </div>    
  </div>

  <div class="form-group">
    <%= f.label :resumen, class: 'col-sm-2 control-label' %>
    <div class="col-lg-6">
      <%= f.text_area :resumen, rows: '3',cols: '10', class: 'form-control' %>  
    </div>    
  </div>  
  <div class="form-group">
    <%= f.label :contenido, class: 'col-sm-2 control-label' %>
    <div class="col-lg-8">
      <%= f.text_area :contenido,rows: '10', cols: '6',:class => 'form-control' %>      
    </div>    
  </div>

  <div class="form-group">
    <%= f.label :imagenes, class: 'col-sm-2 control-label' %>
    <div class="col-lg-2">      
      <%= f.file_field :imagen1, class: 'form-control' %>      
    </div>   
    <div class="col-lg-2">      
      <%= f.file_field :imagen2, class: 'form-control' %>      
    </div> 
    <div class="col-lg-2">      
      <%= f.file_field :imagen3, class: 'form-control' %>      
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-2"></div>    
    <div class="col-lg-2">      
      <%= f.file_field :imagen4, class: 'form-control' %>      
    </div> 
    <div class="col-lg-2">      
      <%= f.file_field :imagen5, class: 'form-control' %>      
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :visible, class: 'col-sm-2 control-label' %>
    <div class="col-lg-6">
      <%= f.select(:visible, [
                ['Visible', 'visible'],
                ['No visible', 'no_visible']
        ], class: 'form-control') %>      
    </div>    
  </div>
  <div class="form-group">
    <div class="col-lg-2"></div>
    <div class="col-lg-6">
      <%= f.submit class: 'btn btn-primary' %>
    </div>    
  </div>  
<% end %>
