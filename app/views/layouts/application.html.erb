<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Apertac" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Apertac" %>">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body id="fondo">
    <div class="container" id="contenedor">
        <%= image_tag'portico_apertac.png' %>
        <nav class="navbar navbar-inverse">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">APERTAC</a>
              </div>
              <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Paginas <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li role="separator" class="divider"></li>
                        <li class="dropdown-header">Nav header</li>
                        <li><a href="#">Separated link</a></li>
                        <li><a href="#">One more separated link</a></li>
                      </ul>
                    </li>
                    <li><a href="#">Noticias</a></li>
                    <li><a href="#">Servicios</a></li>
                    <li><a href="#">Web Amigas</a></li>
                    <li><a href="#">Ubicacion</a></li>
                    <li><a href="#">Convocatorias</a></li>
                    <li><a href="#about">Directorio</a></li>
                    <li><a href="#contact">Contactenos</a></li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                  <li>
                    <a href="/admins/index">
                        <span class="glyphicon glyphicon-lock"></span>
                        Admin
                    </a></li>
                </ul>
              </div><!--/.nav-collapse -->
            </div>
        </nav>

        <div class="row">
            <!-- Columna Izquierda -->
            <div class="col-lg-3">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">
                    <span class="glyphicon glyphicon-log-out"></span>
                    Paginas Apertac
                  </h3>
                </div>
                <table class="table table-striped">
                  <% @paginas.each do |pagina| %>
                    <tr>
                      <td>
                        <span class="glyphicon glyphicon-share-alt"></span>
                        <a href="#"><%= pagina.titulo %></a>
                      </td>
                    </tr>
                  <% end %>
                </table>
              </div>
              
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h1 class="panel-title">
                    <span class="glyphicon glyphicon-list-alt"></span>
                    Directorio Apertac
                  </h1>
                </div>
                 <table class="table table-striped">                    
                    <% @directorios.each do |directorio| %>
                      <tr>
                        <td><a href="#"><%= directorio.nombre_empresa[0,20] %></a></td>
                        <td>
                          <a href="#" class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-search"></span>
                            Ver Datos
                          </a>
                        </td>
                      </tr>
                    <% end %>
                 </table>
              </div>
              
              
            </div>            


            <!-- Columna Central -->
            <div class="col-lg-6">
                <%= yield %>
            </div>


            <!-- Columna Derecha  -->
            <div class="col-lg-3">
              <!-- Block Presidente -->            
              <div class="row">
                <% @presidentes.each do |presidente| %>
                  <div class="col-lg-12">                  
                    <div class="thumbnail">
                      <%= image_tag presidente.foto.url(:thumb) %>                    
                      <div class="caption">
                        <h3>Presidente Apertac</h3>
                        <p><%= presidente.descripcion %></p>
                        <p>
                          <a href="#" class="btn btn-primary" role="button">Ver Datos</a> 
                          <a href="#" class="btn btn-default" role="button">Contactar</a></p>
                      </div>
                    </div>
                  </div>       
                <% end %>         
              </div>

              <!-- Block Documentos -->
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">                    
                      <span class="glyphicon glyphicon-eye-open"></span> 
                      Documentos <small>ultimos</small></a>

                </div>
                
                  <table class="table table-hover">
                    <% i = 1 %>   
                    <% @documentos.each do  |documento| %>
                      <tr>
                        <td>
                          <%= i %>.- 
                          <%= documento.titulo[0,21] %>
                          <% i = i + 1 %>
                        </td>  
                        <td>
                          <a href="#" class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-eye-open"></span> Ver
                          </a>
                        </td>
                      </tr>                      
                    <%  end  %>
                  </table>
                
              </div>

              

              
              <!-- Block Web amigas  -->
              <div>
                <h3>Web Amigas</h3> 
                <hr />
                <% @webamigas.each do |webamiga| %>
                  <%= image_tag webamiga.logo.url(:thumb) %> <br />
                  <br />
                <% end %>
              </div>

              

            </div>


        </div>

      <footer>
        <hr />
        Apertac 2015 -2016
      </footer>
    </div>    
  </body>
</html>
