<h1>Formulario de Contacto</h1>
<hr />

<form method="post" action="/contactenos">
  <div class="form-group">    
    <input type="text" class="form-control input-lg" placeholder="Asunto" name="contacto[asunto]" value= "<%= params[:contacto][:asunto] %>" >
  </div>  
  <div class="form-group">
  	<select name="contacto[tipo]" class="form-control input-lg" >
  		<option value="">Seleccione</option>}
  		option
  		<option value="visible">Asunto Tipo 1</option>
		<option value="no_visible">Asunto Tipo 2</option>
	</select>  	
  </div>

  <div class="form-group">
  	<textarea class="form-control input-lg" rows="5" name="contacto[contenido]"><%= params[:contacto][:contenido] %></textarea>	
  </div>



  <button type="submit" class="btn btn-default btn-lg">
  	<span class="glyphicon glyphicon-lock"></span>
  		Enviar informacion
  </button>
</form>