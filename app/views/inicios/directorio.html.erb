</ol>

<h1><%= @directorio.nombre_empresa %> <small>APERTAC</small></h1>
<hr />

<dl class="dl-horizontal">
	<dt><strong>Nombre Empresa : </strong></dt>
	<dd><%= @directorio.nombre_empresa %></dd>

	<dt><strong>Nombre Responsable : </strong></dt>
	<dd><%= @directorio.nombre_responsable %></dd>

	<dt><strong>Numero 1 : </strong></dt>
	<dd></dd>

	<dt><strong>Numero 2 : </strong></dt>
	<dd></dd>

	<dt><strong>RUC : </strong></dt>
	<dd><%= @directorio.ruc %></dd>

	<dt><strong>DNI : </strong></dt>
	<dd><%= @directorio.dni %></dd>

	<dt><strong>Descripcion : </strong></dt>
	<dd><%= @directorio.descripcion %></dd>

	<dt><strong>Contenido : </strong></dt>
	<dd><%= @directorio.contenido.html_safe %></dd>

	<dt><strong>Logo : </strong></dt>
	<dd>
		<%= image_tag @directorio.logo.url(:thumb) %>
	</dd>

	<dt><strong>Imagenes : </strong></dt>
	<dd>
		<%= image_tag @directorio.imagen1.url(:thumb) %><br />
		<%= image_tag @directorio.imagen2.url(:thumb) %><br />
		<%= image_tag @directorio.imagen3.url(:thumb) %><br />
		<%= image_tag @directorio.imagen4.url(:thumb) %><br />
	</dd>
</dl>
<br />
